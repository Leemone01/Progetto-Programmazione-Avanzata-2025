<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.myagendaclient.TuttiController">
   <children>
      <ToolBar nodeOrientation="RIGHT_TO_LEFT">
        <items>
          <Button fx:id="bottoneDisconnettiti" mnemonicParsing="false" onAction="#disconnettiUtente" text="Disconnettiti" />
            <Button fx:id="bottoneTorna" mnemonicParsing="false" onAction="#switchToTutti" text="Torna alle mie attività" />
            <Text fx:id="welcomeMsg" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER" />
        </items>
         <padding>
            <Insets bottom="5.0" left="10.0" top="5.0" />
         </padding>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </ToolBar>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Le mie attività">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Text>
      <VBox>
         <children>
            <HBox spacing="5.0">
               <children>
                  <Button fx:id="bottoneCerca" mnemonicParsing="false" onAction="#switchToCerca" text="Cerca" />
                  <Button fx:id="bottoneInserisci" mnemonicParsing="false" onAction="#switchToInserimento" text="Inserisci" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="10.0" top="5.0" />
               </padding>
            </HBox>
            <TableView fx:id="attivitaTable" disable="true">
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#rimuoviAttivita" text="Rimuovi attività" />
                    </items>
                  </ContextMenu>
               </contextMenu>
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TableView>
         </children>
      </VBox>
      <Text fx:id="messaggio" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Text>
   </children>
</VBox>
