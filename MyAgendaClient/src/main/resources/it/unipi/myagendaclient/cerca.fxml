<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.myagendaclient.CercaController">
   <children>
      <ToolBar nodeOrientation="RIGHT_TO_LEFT">
        <items>
          <Button fx:id="bottoneDisconnettiti" mnemonicParsing="false" onAction="#disconnettiUtente" text="Disconnettiti" />
            <Button fx:id="bottoneTorna" mnemonicParsing="false" onAction="#switchToTutti" text="Torna alle mie attività" />
            <Text fx:id="welcomeMsg" strokeType="OUTSIDE" strokeWidth="0.0" />
        </items>
         <padding>
            <Insets bottom="5.0" left="10.0" top="5.0" />
         </padding>
      </ToolBar>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Cerca un'attività">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Text>
      <GridPane alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="-Infinity" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="-Infinity" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Testo" textAlignment="CENTER" />
            <TextField fx:id="input" maxWidth="-Infinity" prefWidth="200.0" GridPane.rowIndex="1">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <GridPane.margin>
                  <Insets left="10.0" right="10.0" />
               </GridPane.margin>
            </TextField>
            <ChoiceBox fx:id="categoria" disable="true" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <GridPane.margin>
                  <Insets left="10.0" right="10.0" />
               </GridPane.margin>
            </ChoiceBox>
            <Label text="Categoria" GridPane.columnIndex="1" />
            <Label text="Cerca per:" GridPane.columnIndex="2" />
            <VBox GridPane.columnIndex="2" GridPane.rowIndex="1">
               <children>
                  <RadioButton fx:id="titolo" mnemonicParsing="false" selected="true" text="Titolo" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <toggleGroup>
                        <ToggleGroup fx:id="ricercaParametro" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="contenuto" mnemonicParsing="false" text="Contenuto" toggleGroup="$ricercaParametro" GridPane.columnIndex="2" GridPane.rowIndex="2">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></RadioButton>
               </children>
               <GridPane.margin>
                  <Insets left="10.0" right="10.0" />
               </GridPane.margin>
            </VBox>
         </children>
      </GridPane>
      <Button fx:id="bottoneCerca" mnemonicParsing="false" onAction="#cerca" text="Cerca" />
      <TableView fx:id="attivitaTable">
         <contextMenu>
            <ContextMenu>
              <items>
                <MenuItem mnemonicParsing="false" onAction="#rimuoviAttivita" text="Rimuovi attività" />
              </items>
            </ContextMenu>
         </contextMenu>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin></TableView>
      <Text fx:id="messaggio" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Text>
   </children>
</VBox>
