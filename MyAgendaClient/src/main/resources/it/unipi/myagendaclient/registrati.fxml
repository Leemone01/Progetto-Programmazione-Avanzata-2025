<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.myagendaclient.RegistratiController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Registrati">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Text>
      <VBox alignment="CENTER">
         <children>
            <Label text="Username">
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </Label>
            <TextField fx:id="username" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="200.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Label text="Password">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <PasswordField fx:id="password" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="200.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Button fx:id="bottoneInvio" mnemonicParsing="false" onAction="#registraUtente" text="Registrati">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Button>
            <Button fx:id="bottoneHome" mnemonicParsing="false" onAction="#switchToHome" text="Torna alla home" />
         </children>
      </VBox>
      <Text fx:id="messaggio" strokeType="OUTSIDE" strokeWidth="0.0">
         <VBox.margin>
            <Insets />
         </VBox.margin></Text>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
