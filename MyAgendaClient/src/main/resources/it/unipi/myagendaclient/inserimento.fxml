<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unipi.myagendaclient.InserimentoController">
   <children>
      <ToolBar nodeOrientation="RIGHT_TO_LEFT">
        <items>
          <Button fx:id="bottoneDisconnettiti" mnemonicParsing="false" onAction="#disconnettiUtente" text="Disconnettiti" />
            <Button fx:id="bottoneTorna" mnemonicParsing="false" onAction="#switchToTutti" text="Torna alle mie attività" />
            <Text fx:id="welcomeMsg" strokeType="OUTSIDE" strokeWidth="0.0" />
        </items>
         <padding>
            <Insets bottom="5.0" left="10.0" top="5.0" />
         </padding>
      </ToolBar>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Inserisci un'attività">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Text>
      <VBox alignment="CENTER">
         <children>
            <Label text="Titolo">
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </Label>
            <TextField fx:id="titolo" maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="200.0">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
         </children>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Label text="Categoria">
               <padding>
                  <Insets bottom="10.0" />
               </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Label>
            <ChoiceBox fx:id="categoria" disable="true" prefWidth="150.0" />
         </children>
      </VBox>
      <VBox alignment="CENTER">
         <children>
            <Label text="Contenuto">
               <padding>
                  <Insets bottom="10.0" />
               </padding>
            </Label>
            <TextArea fx:id="contenuto">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" />
               </VBox.margin>
            </TextArea>
         </children>
      </VBox>
      <Button fx:id="bottoneInserisci" mnemonicParsing="false" onAction="#inserisciAttivita" text="Inserisci" />
      <Text fx:id="messaggio" strokeType="OUTSIDE" strokeWidth="0.0" textAlignment="CENTER">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Text>
   </children>
</VBox>
